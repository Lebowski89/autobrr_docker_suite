# config.yaml
---
server:
  host: 0.0.0.0
  port: {{ autobrr_omegabrr_ports_cont }}
  apiToken: {{ omegabrr_api }}
schedule: 0 */6 * * *
clients:
  autobrr:
    host: {{ autobrr_clients_autobrr_host }}
    apikey: AUTOBRR_API

  arr:
{% if autobrr_clients_lidarr_is_enabled %}
    - name: {{ autobrr_clients_lidarr_name }}
      type: {{ autobrr_clients_lidarr_type }}
      host: {{ autobrr_clients_lidarr_host }}
      apikey: {{ autobrr_clients_lidarr_api }}
      filters: []
{% endif %}
{% if autobrr_clients_radarr_is_enabled %}
    - name: {{ autobrr_clients_radarr_name }}
      type: {{ autobrr_clients_radarr_type }}
      host: {{ autobrr_clients_radarr_host }}
      apikey: {{ autobrr_clients_radarr_api }}
      filters: []
{% endif %}
{% if autobrr_clients_radarr4k_is_enabled %}
    - name: {{ autobrr_clients_radarr4k_name }}
      type: {{ autobrr_clients_radarr4k_type }}
      host: {{ autobrr_clients_radarr4k_host }}
      apikey: {{ autobrr_clients_radarr4k_api }}
      filters: []
{% endif %}
{% if autobrr_clients_sonarr_is_enabled %}
    - name: {{ autobrr_clients_sonarr_name }}
      type: {{ autobrr_clients_sonarr_type }}
      host: {{ autobrr_clients_sonarr_host }}
      apikey: {{ autobrr_clients_sonarr_api }}
      filters: []
      excludeAlternateTitles: false
{% endif %}
{% if autobrr_clients_whisparr_is_enabled %}
    - name: {{ autobrr_clients_whisparr_name }}
      type: {{ autobrr_clients_whisparr_type }}
      host: {{ autobrr_clients_whisparr_host }}
      apikey: {{ autobrr_clients_whisparr_api }}
      filters: []
{% endif %}

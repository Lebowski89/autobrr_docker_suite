# config.yaml
---
server:
  host: 0.0.0.0
  port: {{ omegabrr_ports_cont }}
  apiToken: {{ omegabrr_api }}
schedule: 0 */6 * * *
clients:
  autobrr:
    host: http://{{ autobrr_basics_name }}:{{ autobrr_ports_cont }}
    apikey: AUTOBRR_API

  arr:
{% if omegabrr_clients_lidarr_is_enabled %}
    - name: lidarr
      type: lidarr
      host: {{ omegabrr_clients_lidarr_host }}
      apikey: {{ omegabrr_clients_lidarr_api }}
      filters: []
{% endif %}
{% if omegabrr_clients_radarr_is_enabled %}
    - name: radarr
      type: radarr
      host: {{ omegabrr_clients_radarr_host }}
      apikey: {{ omegabrr_clients_radarr_api }}
      filters: []
{% endif %}
{% if omegabrr_clients_radarr4k_is_enabled %}
    - name: radarr4k
      type: radarr
      host: {{ omegabrr_clients_radarr4k_host }}
      apikey: {{ omegabrr_clients_radarr4k_api }}
      filters: []
{% endif %}
{% if omegabrr_clients_sonarr_is_enabled %}
    - name: sonarr
      type: sonarr
      host: {{ omegabrr_clients_sonarr_host }}
      apikey: {{ omegabrr_clients_sonarr_api }}
      filters: []
      excludeAlternateTitles: false
{% endif %}
{% if omegabrr_clients_sonarr4k_is_enabled %}
    - name: sonarr4k
      type: sonarr
      host: {{ omegabrr_clients_sonarr4k_host }}
      apikey: {{ omegabrr_clients_sonarr4k_api }}
      filters: []
      excludeAlternateTitles: false
{% endif %}
{% if omegabrr_clients_whisparr_is_enabled %}
    - name: whisparr
      type: whisparr
      host: {{ omegabrr_clients_whisparr_host }}
      apikey: {{ omegabrr_clients_whisparr_api }}
      filters: []
{% endif %}
